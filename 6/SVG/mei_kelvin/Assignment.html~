var makeBoards = function (e) {
var a1 = document.createElementNS("http://www.w3.org/2000/svg","rectangle");
a1.setAttribute ('width','50');
a1.setAttribute ('height','10');
a1.setAttribute ('x','250');
a1.setAttribute ('y','0');
a1.setAttribute ('fill','blue');
var b1 = document.createElementNS("http://www.w3.org/2000/svg","rectangle");
b1.setAttribute ('width','50');
b1.setAttribute ('height','10');
b1.setAttribute ('x','250');
b1.setAttribute ('y','500');
b1.setAttribute ('fill','blue');
foo.appendChild(a1);
foo.appendChild(b1);
}

var makeBall = function (e) {
var ball = document.createElementNS("http://www.w3.org/2000/svg","circle");
ball.setAttribute ('cx','20');
ball.setAttribute ('cy','20');
ball.setAttribute ('r','20');
ball.setAttribute ('fill','black');
foo.appendChild(ball)
}

